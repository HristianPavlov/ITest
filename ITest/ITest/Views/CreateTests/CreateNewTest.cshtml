@model CreateTestViewModel

@{
    ViewData["Title"] = "CreateQuestion";
}

<div id="createTest-content">
    <h1 class="col-lg-offset-2 pageTitle">Create New Test</h1>
    <div class="row">
        <div class="col-lg-12 col-lg-offset-1">
            <form asp-controller="CreateTests" asp-action="CreateNewTest" method="post" class="form-inline" id="question-form">
                <div class="form-group">
                    <input asp-for="Content" placeholder="Test name" id="input-test" class="form-control" />

                    <button type="button" class="add-question">+ Question</button>
                </div>
                <br />

                <div id="questions-container">

                    <div class="panel panel-default question" name="Questions1">
                        <h3>Question1</h3>
                        <div class="form-group">
                            <input asp-for="Questions[0].Content" placeholder="Question content" class="form-control" />
                        </div>

                        <div class="answer-container">
                            <div style="width: 70%; height: 50px;" class="form-group col-lg-offset-1">
                                <input asp-for="Questions[0].Answers[0].Content" placeholder="Answer 1" class="form-control" />
                                <input asp-for="Questions[0].Answers[0].Correct" class="form-control" type="radio" value="true"/> 
                            </div>
                            <button type="button" class="add-answer">+ Answer</button>
                        </div>

                    </div>
                </div>

                <div id="submitBtnArea" class="form-group">
                    <button id="submitNewTestBtn" type="submit" value="submit" class="btn btn-default">Submit</button>
                </div>
            </form>

        </div>
    </div>
</div>







