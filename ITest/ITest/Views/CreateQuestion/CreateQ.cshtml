@model CreateTestViewModel

    @{
        ViewData["Title"] = "CreateQuestion";
    }

    <h1 class="col-lg-offset-2">Create</h1>

    <div class="row">
        <div class="col-lg-4 col-lg-offset-2">
            <form asp-controller="CreateQuestion" asp-action="Create" method="post" class="form-inline" id="question-form">
                <div class="form-group">
                    <input asp-for="Content" class="form-control" />

                    <button type="button" class="add-question">Add Question</button>
                </div>
                <br />

                <div id="questions-container">
                    
                    <div class="panel panel-default question" name="Questions1">
                        <h3>Question1</h3>
                        <div class="form-group">
                            <input asp-for="Questions[0].Content" placeholder="Title" class="form-control" />
                        </div>

                        <div class="answer-container">
                            <div class="form-group col-lg-offset-1" >
                                <input asp-for="Questions[0].Answers[0].Content" placeholder="Answer 1" class="form-control"  />
                                <input asp-for="Questions[0].Answers[0].Correct" class="form-control" />
                            </div>
                            <button type="button" class="add-answer">Add Answer</button>
                        </div>

                    </div>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-default">Submit</button>
                </div>
            </form>

        </div>
    </div>







