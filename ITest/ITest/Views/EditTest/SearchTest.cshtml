<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.16/css/jquery.dataTables.css">
<link href="https://fonts.googleapis.com/css?family=Fjalla+One" rel="stylesheet">

@using ITest.Models.TestRealBagViewModel
@model TestRealBagViewModel

@{
    ViewData["Title"] = "SearchTest";
}


@*<h2>SearchTest</h2>*@

<table id="table_id" class="display">
    <thead>
        <tr>
            <th>Test Name</th>


            <th>Status</th>

            <th>Category</th>


            <th>Actions</th>



        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model.ResultBag)
        {
            <tr>
                <td>@item.Name</td>

                <td>@item.Status</td>

                <td>@item.CategoryName</td>
                <td>
                    Publish
                    @*<a href="/Results/DetailedSolution?userEmail=@item.UserEmail&testId=@item.Test.Id">Disable</a>*@
                </td>

                <td>
                    @if (item.Status.ToString() == "Draft")
                    {
                        <a href="/EditTest/EditTest/@item.Name">Edit</a>

                    }
                    else
                    {


                        <a href="/EditTest/EditPublishedTest/@item.Name">Edit</a>
                    }




                </td>
                <td>
                    Disable
                    @*<a href="/Results/DetailedSolution?userEmail=@item.UserEmail&testId=@item.Test.Id">Publish</a>*@
                </td>
                <td>
                    Delete
                    @*<a href="/Results/DetailedSolution?userEmail=@item.UserEmail&testId=@item.Test.Id">Publish</a>*@
                </td>


            </tr>
        }
    </tbody>
</table>

@section Scripts{
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.js"></script>
    <script src="~/js/showResults.js"></script>

}